{
  "author": "igorlogius",
  "commands": {
    "_execute_page_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+C"
      }
    }
  },
  "description": "Copy active tab url via pageAction or shortcut",
  "icons": {
    "128": "icon.svg"
  },
  "background": {
	"scripts": ["background.js"]
  },
  "manifest_version": 2,
  "name": "Copy Tab URL as Text",
  "page_action": {
    "browser_style": true,
    "show_matches": [
      "<all_urls>"
    ],
    "default_popup": "popup.html",
    "default_icon": "icon.svg"
  },
  "permissions": [
    "activeTab",
    "clipboardWrite"
  ],
  "version": "1.2.10"
}
